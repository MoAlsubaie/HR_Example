@model System.Data.DataTable
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>


<table class="table table-bordered table-hover">
    <tr>
        <th>Employee ID</th>
        <th>Employee Name</th>
        <th>Employee salary</th>
        <th>Employee Department</th>
        <th>Employee Country</th>
        <th>Edit</th>
        <th>Delete</th>
    </tr>

    @foreach (System.Data.DataRow item in Model.Rows)
    {
<tr>
    <td>@item[0].ToString()</td>
    <td>@item[1].ToString()</td>
    <td>@item[2].ToString()</td>
    <td>@item[3].ToString()</td>
    <td>@item[4].ToString()</td>
    <td>@Html.ActionLink("Edit", "Edit", new { id = item[0].ToString() })</td>
    <td>
        @Html.ActionLink("Delete", "Delete", new { id = item[0].ToString() })
    </td>
</tr>

    }



</table>

<a href="/Emps/Create" style="color:black">  <i class="fas fa-plus fa-lg">Add Departments </i> </a>


